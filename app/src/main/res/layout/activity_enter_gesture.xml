<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ucmar17.a911_onthemove.EnterGesture">

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="66dp"
        android:text="Enter your gesture 5 times. Each represents 1 entry of your gesture"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.PopupMenu.Large"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="181dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="64dp"
        android:text="WARNING: THIS GESTURE WILL BE USED TO MAKE 911 CALLS SO MAKE SURE THAT IT IS A GESTURE YOU CAN'T MAKE BY ACCIDENT"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/ITERATION1"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:background="@color/colorAccent"
        android:onClick="enterGesture1"
        android:text="1"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/ITERATION2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="enterGesture2"
        android:text="2"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/ITERATION3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="enterGesture3"
        android:text="3"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/ITERATION4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="enterGesture4"
        android:text="4"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/ITERATION5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="enterGesture5"
        android:text="5"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="427dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="268dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/phonemovement"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
